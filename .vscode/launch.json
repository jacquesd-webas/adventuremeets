{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: Launch (ts-node-dev style)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/api",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/api/src/main.ts"
      ],
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "1",
        "TS_NODE_PROJECT": "${workspaceFolder}/api/tsconfig.json",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true
    },
    {
      "name": "API: Attach to 9229",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
